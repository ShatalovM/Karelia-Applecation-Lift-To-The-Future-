<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kareliaguide.vsquad.com.karelia.MenuActivity"

    tools:showIn="@layout/app_bar_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_food"
            android:onClick="toPlaces1"
            android:scaleType="centerInside"
            android:src="@drawable/cutlery" />

        <ImageView
            android:id="@+id/btn_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_canoe"
            android:onClick="toPlaces2"
            android:scaleType="centerInside"
            android:src="@drawable/matryoshka" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_matr"
            android:scaleType="centerInside"
            android:onClick="toPlaces3"
            android:src="@drawable/canoe" />

        <ImageView
            android:id="@+id/btn_fourth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_forest"
            android:scaleType="centerInside"
            android:onClick="toPlaces4"
            android:src="@drawable/forest" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_fifth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_top"
            android:scaleType="centerInside"
            android:onClick="toPlaces5"
            android:src="@drawable/popular" />

        <ImageView
            android:id="@+id/btn_sixth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu_nearby"
            android:scaleType="centerInside"
            android:onClick="toPlaces6"
            android:src="@drawable/compass" />

    </LinearLayout>



</TableLayout>

